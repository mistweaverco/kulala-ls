{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
