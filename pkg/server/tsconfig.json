{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["es2020"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
