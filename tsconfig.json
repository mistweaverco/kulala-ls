{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true
  },
  "types": ["node"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
